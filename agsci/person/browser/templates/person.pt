<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone.app.dexterity">
<body>

<metal:main fill-slot="content-description">

    <ul class="documentDescription"
        tal:define="job_titles context/job_titles|nothing"
        tal:condition="job_titles">
        <li tal:repeat="i job_titles" tal:content="i" />
    </ul>
</metal:main>

<metal:main fill-slot="content-core">

    <h2>Contact Information</h2>

    <div
        tal:define="street_address context/street_address|nothing;
                    office_city context/city|nothing;
                    office_state context/state|nothing;
                    office_zip_code context/zip_code|nothing;"
        tal:condition="python: street_address or office_city">
        <h3>Address</h3>
        <p>
            <tal:street_address tal:repeat="i street_address">
                <span tal:replace="i" />
                <br />
            </tal:street_address>
            <span tal:replace="office_city" /><tal:block tal:condition="office_state">, </tal:block>
            <span tal:content="office_state" />
            <span tal:content="office_zip_code" />
        </p>
    </div>

    <div
        tal:define="email context/email|nothing"
        tal:condition="email">
        <h3>Email</h3>
        <p>
            <a tal:attributes="href string:mailto:${email}"
                tal:content="email" />
        </p>
    </div>

    <div
        tal:define="office_phone context/phone_number|nothing"
        tal:condition="office_phone">
        <h3>Phone</h3>
        <p tal:content="office_phone" />
    </div>

    <div
        tal:define="fax_number context/fax_number|nothing"
        tal:condition="fax_number">
        <h3>Fax</h3>
        <p tal:content="fax_number" />
    </div>

    <h2>Professional Information</h2>

    <tal:areas
        tal:define="items context/areas_expertise|nothing"
        tal:condition="items">

        <h3>Areas of Expertise</h3>
        <ul>
            <li tal:repeat="item items"
                tal:content="item" />
        </ul>

    </tal:areas>

    <tal:education
        tal:define="items context/education|nothing"
        tal:condition="items">

        <h3>Education</h3>
        <ul>
            <li tal:repeat="item items"
                tal:content="item" />
        </ul>

    </tal:education>

    <div class="biography"
        tal:define="bio context/bio|nothing"
        tal:condition="bio"
        tal:content="structure bio" />

    <tal:social_media
        tal:define="items context/getSocialMedia|nothing"
        tal:condition="items">
        <h2>Social Media</h2>
        <ul>
            <li tal:repeat="item items">
                <span tal:content="item/title" />:
                <a tal:attributes="href item/value" tal:content="item/value" />
            </li>

        </ul>
    </tal:social_media>

    <tal:products
        tal:define="folderContents view/getPersonProducts"
        tal:condition="folderContents">

        <metal:listing use-macro="context/@@product_listing/macros/product-listing" />

    </tal:products>

    <tal:metadata
        tal:define="items context/getMetadata|nothing"
        tal:condition="items">
        <h2>Metadata</h2>

        <tal:items
            tal:repeat="i items">
                <h3 tal:content="i/title" />
                <ul>
                    <li tal:repeat="j i/value" tal:content="j" />
                </ul>
        </tal:items>
    </tal:metadata>

</metal:main>

</body>
</html>


